{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "exclude": ["typings/test.ts"],
    "excludeExternals": true,
    "includeDeclarations": true,
    "mode": "file",
    "out": "telegraf-docs",
    "readme": "docs/README.md",
    "theme": "docs/theme/"
  },
  "include": [
    "typings"
  ]
}

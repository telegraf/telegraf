{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "typings/",
    "outDir": "lib/",
    "rootDir": "src/",
    "target": "ES2019",
    "strict": true,
    "tsBuildInfoFile": "typings/tsconfig.tsbuildinfo",
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "exclude": ["typings/test.ts"],
    "excludeExternals": true,
    "includeDeclarations": true,
    "mode": "file",
    "out": "telegraf-docs",
    "readme": "docs/README.md",
    "theme": "docs/theme/"
  },
  "include": ["src/"]
}
